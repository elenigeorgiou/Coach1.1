<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.tjhsst.coach11" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Login_Activity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HeartRateTestActivity"
            android:label="@string/title_activity_heart_rate_test" >
        </activity>

        <meta-data
            android:name="com.samsung.android.health.permission.read"
            android:value="com.samsung.health.hear_rate;com.samsung.step_count;com.samsung.electrocardiogram" />

        <activity
            android:name=".FitTestActivity"
            android:label="@string/title_activity_fit_test" >
        </activity>
        <activity
            android:name=".BluetoothTestActivity"
            android:label="@string/title_activity_bluetooth_test" >
        </activity>
    </application>

</manifest>
